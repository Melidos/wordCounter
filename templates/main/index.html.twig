{% extends 'base.html.twig' %}

{% block title %}Word Counter{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em; text-align: center }
    textarea { width: 80%; min-height: 150px; display:block; margin: auto }
    h1 { }
    #words, #characters { font-size: 2em; margin-top: 1em }
</style>

<div class="wrapper">
    <h1>Word Counter App</h1>

    <textarea
        autofocus
        placeholder="Enter your text here"
        id="textAreaID"
        oninput="
            var wordsArray = document.getElementById('textAreaID').value.trim().split(' ').filter(el => el != '');
            console.log(wordsArray);
            document.getElementById('words').innerHTML = wordsArray.length + ' words';
            document.getElementById('characters').innerHTML = wordsArray.reduce((acc, el) => acc + el.length, 0) + ' characters';
            "
    ></textarea>

    <div id="words">0 word</div>
    <div id="characters">0 characters</div>

</div>

<script>
    
</script>
{% endblock %}